# Vector Database Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_DISTANCE_METRIC=cosine
QDRANT_SEARCH_HNSW_EF=128
QDRANT_SEARCH_EXACT=false
QDRANT_RESCORING_ENABLED=true
QDRANT_RESCORING_OVERSAMPLING=2.0
QDRANT_USE_HYBRID=true
QDRANT_HYBRID_ALPHA=0.5

# Cache Configuration (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_VOCAB_KEY_PREFIX=vocab:

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DEVICE=cpu

# Text Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Search Defaults
SEARCH_LIMIT_DEFAULT=10
SEARCH_DEDUPLICATE=true
SEARCH_SIMILARITY_THRESHOLD=0.85

# Lexical Search Parameters
LEXICAL_K1=1.5
LEXICAL_B=0.75

# Vocabulary Storage
VOCABULARY_STORE_PATH=artifacts/vocabularies
VOCABULARY_STORE_BACKEND=redis

# Pipeline Configuration
PIPELINE_BATCH_SIZE=100
PIPELINE_CLEANUP_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Collection Names
RSS_COLLECTION=financial_rss_news
API_COLLECTION=financial_api_news

# API Keys (Optional)
YAHOO_FINANCE_API_KEY=
ALPHA_VANTAGE_API_KEY=
NEWS_API_KEY=

# Development Settings
PYTHONPATH=./
